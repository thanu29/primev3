public class PrimeDemoV3 {
    public static void main(String args[]) {
        int num,flag=0,i;
        num=Integer.parseInt(args[0]);
        for(i=2;i<=num/2;i++)
        {
            if(num % i == 0)
            {
                System.out.println(num+ " is not a prime number");
                flag=1;
                break;
            }
        }
        if(flag==0)
        {
            System.out.println(num+ " is a prime number");
        }
}
}
